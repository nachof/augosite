%h2= tournament.name

%h3 Detalles
%p= tournament.description

%h3 Resultados

%table#positionsTable
  %tr
    %th IP
    %th Nombre
    %th Puntos
    - tournament.tiebreaks.each do |tb|
      %th= tb.to_s.upcase
    - 1.upto(tournament.rounds) do |rnum|
      %th.roundinfo= "R#{rnum}"
  - tournament.sorted_players.each do |player|
    %tr{:id => "player_#{player.ip}"}
      %td= player.ip
      %td= player.name
      %td.pointsinfo= player.score
      - tournament.tiebreaks.each do |tb|
        %td.pointsinfo= player.send(tb)
      - 1.upto(tournament.rounds) do |rnum|
        = round_td player.rounds[rnum]
